.uploadWorkPage{
    padding: 30rpx;
    border-top: 2px solid #eee;

}
.work-text{
    box-sizing: border-box;
    padding: 20rpx;
    width: 100%;
    height: 154rpx;
    color: #666;
    font-size: 28rpx;
    border: 1px solid #e5e5e5;
    border-radius: 4rpx;
    background: #f5f5f5;
}
.placeholder-style{
    color: #A0AAB7;
    font-size: 24rpx;
}
.imgUpload{
    box-sizing: border-box;
    padding: 40rpx 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
}
.uploadBtn{
    display: flex;
    justify-content: center;
    line-height: 200rpx;
    border: 1px solid #eee;
    border-radius: 4rpx;
    background: #fafafa;
}
.imgUpload .uploadImg{
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    min-height: 200rpx;
}

.videoUpload{
  display: flex;
  margin-bottom: 10px; 
}
.videoUpload .uploadVideo{
  width: 90px;
  height: 90px;
  border: 1px solid #eee;
  background: #fafafa;
  margin-right: 10px;
}

.videoUpload .uploadVideo image{
  width: 50rpx;
  height: 50rpx;
  padding-top: 35px;
  padding-left: 33px;
}
.videoUpload .videoList .uploadVideo{
  width: 90px;
  height: 90px;
}
.videoList{
  display: inline-block;
  position: relative;
}
.delbtn{ 
  width: 40rpx; 
  height: 40rpx; 
  line-height: 40rpx;
  position: absolute; 
  top: 0; 
  z-index: 2;
  background-color: rgba(0, 0, 0, .4); 
  color: #fff; 
  font-size: 22rpx; 
  text-align: center;
  float: right;
}
.col-3{
  display: inline-block;
  position: relative;
  overflow: hidden;
}
.delbtn1{
   width: 40rpx; 
  height: 40rpx; 
  line-height: 40rpx;
  position: absolute; 
  top: 1px; 
  right: 12px;  
  z-index: 2;
  background-color: rgba(0, 0, 0, .4); 
  color: #fff; 
  font-size: 22rpx; 
  text-align: center;
  float: right;
}